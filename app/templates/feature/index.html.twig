{% extends 'base.html.twig' %}

{% block title %}Feature index{% endblock %}

{% block body %}
    <h1>Feature index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>JobValue</th>
                <th>Description</th>
                <th>AcceptationValidation</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feature in features %}
            <tr>
                <td>{{ feature.id }}</td>
                <td>{{ feature.title }}</td>
                <td>{{ feature.jobValue }}</td>
                <td>{{ feature.description }}</td>
                <td>{{ feature.acceptationValidation }}</td>
                <td>{{ feature.createdAt ? feature.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ feature.updatedAt ? feature.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('feature_show', {'id': feature.id}) }}">show</a>
                    <a href="{{ path('feature_edit', {'id': feature.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('feature_new') }}">Create new</a>
{% endblock %}
