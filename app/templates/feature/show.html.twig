{% extends 'base.html.twig' %}

{% block title %}Feature{% endblock %}

{% block body %}
    <h1>Feature</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feature.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ feature.title }}</td>
            </tr>
            <tr>
                <th>JobValue</th>
                <td>{{ feature.jobValue }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ feature.description }}</td>
            </tr>
            <tr>
                <th>AcceptationValidation</th>
                <td>{{ feature.acceptationValidation }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ feature.createdAt ? feature.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ feature.updatedAt ? feature.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('feature_index') }}">back to list</a>

    <a href="{{ path('feature_edit', {'id': feature.id}) }}">edit</a>

    {{ include('feature/_delete_form.html.twig') }}
{% endblock %}
