<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('build/configuration.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('build/bootstrap-grid.min.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header id="header">
                <div class="bg-header"></div>
                <div class="logo"><img alt="logo" src="{{ asset('assets/img/logo.svg') }}" /></div>
                <a class="button"><img class="profile" alt="logo" src="{{ asset('assets/img/profile.png') }}" /></a>
                <a class="button"><img class="logout" alt="logo" src="{{ asset('assets/img/logout.png') }}" /></a>
            </header>
        {% endblock %}
        {% block nav %}
            {# <nav id="main-nav">
