                <a class="button"><img class="logout" alt="logo" src="{{ asset('assets/img/logout.png') }}" /></a>
            </nav> #}
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
